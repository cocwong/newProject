<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="bottom"
            android:background="@drawable/tabbar_shadow"/>
    </FrameLayout>
    <RadioGroup
        android:id="@+id/main_tab_group"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <RadioButton
            android:id="@+id/main_tab_btn_latest"
            style="@style/MainTab"
            android:drawableTop="@drawable/sel_main_tab_latest"
            android:text="@string/latest" />

        <RadioButton
            android:id="@+id/main_tab_btn_image"
            style="@style/MainTab"
            android:drawableTop="@drawable/sel_main_tab_image"
            android:text="@string/image" />

        <RadioButton
            android:id="@+id/main_tab_btn_raise"
            style="@style/MainTab"
            android:drawableTop="@drawable/sel_main_tab_raise"
            android:text="@string/raise" />

        <RadioButton
            android:id="@+id/main_tab_btn_find"
            style="@style/MainTab"
            android:drawableTop="@drawable/sel_main_tab_find"
            android:text="@string/find" />

        <RadioButton
            android:id="@+id/main_tab_btn_mine"
            style="@style/MainTab"
            android:drawableTop="@drawable/sel_main_tab_mine"
            android:text="@string/mine" />
    </RadioGroup>
</LinearLayout>